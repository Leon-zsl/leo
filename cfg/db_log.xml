<logging>
<filter enabled="true">
<tag>db_log</tag>
<type>file</type>
<level>DEBUG</level>
<property name="filename">../log/db.log</property>
<property name="format">[%D %T]%M</property>
<property name="rotate">true</property>
<property name="maxsize">0M</property>
<property name="maxlines">0K</property>
<property name="daily">true</property>
</filter>
<filter enabled="true">
<tag>db_console_log</tag>
<type>console</type>
<level>DEBUG</level>
</filter>
</logging>
